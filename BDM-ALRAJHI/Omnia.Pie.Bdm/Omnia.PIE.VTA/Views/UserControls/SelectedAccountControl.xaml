<UserControl x:Class="Omnia.PIE.VTA.Views.Workflow.SelectedAccountControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Omnia.PIE.VTA.Views.Workflow"
             mc:Ignorable="d" 
             d:DesignHeight="50" 
             d:DesignWidth="300" 
             Loaded="UserControl_Loaded">

    <StackPanel HorizontalAlignment="Center" Margin="2">
        <TextBlock Text="{Binding AccountType}" Margin="2" Foreground="Blue" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
        <TextBlock Text="{Binding AccountNumber}" Margin="2" Foreground="SeaGreen" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBlock>
    </StackPanel>

</UserControl>
