<Page x:Class="Omnia.PIE.VTA.Views.Workflow.AccountInquiry01"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Omnia.PIE.VTA.Views.Workflow"
      mc:Ignorable="d" 
      d:DesignHeight="300" 
      d:DesignWidth="500" 
      Loaded="Page_Loaded">

    <WrapPanel Background="White">
        <Button CommandParameter="701" Margin="5" Width="140" Height="55" Style="{StaticResource TransparentIconButton}">
            <TextBlock HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Use Debit Card" VerticalAlignment="Top"/>
        </Button>
        <Button CommandParameter="702" Margin="5" Width="140" Height="55" Style="{StaticResource TransparentIconButton}">
            <TextBlock HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Use Emirates ID" VerticalAlignment="Top"/>
        </Button>
        <Button CommandParameter="999200" Margin="5" Width="140" Height="55" Style="{StaticResource TransparentIconButton}">
            <TextBlock HorizontalAlignment="Left" Margin="5" TextWrapping="Wrap" Text="Back" VerticalAlignment="Top"/>
        </Button>
    </WrapPanel>
</Page>
